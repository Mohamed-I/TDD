[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W,N815
ignore = B950,C901,E203,E501,N802,N806,RST201,RST203,RST301,S105,S311,S404,S602,W503
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores = tests/*:S101
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
